{
    "printWidth": 100,

    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",

    "overrides": [
        {
            "files": "*.json",
            "options": {
                "printWidth": 80,
                "tabWidth": 4
            }
        },
        {
            "files": "./src/locales/keys.js",
            "options": {
                "printWidth": 100,
                "tabWidth": 4
            }
        }
    ]
}
